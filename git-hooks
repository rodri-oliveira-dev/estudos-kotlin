import io.micronaut.http.annotation.Get
import io.micronaut.http.client.annotation.Client

@Client("my-http-client")
interface MyHttpClient {

    @Get("/some/endpoint")
    fun getSomeData(): String

}



micronaut:
  http:
    services:
      my-http-client:
        url: https://example.com
        read-timeout: 5s
